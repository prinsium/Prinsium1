---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Home from "../components/Home.astro";
import Btn from "../components/assets/Btn.astro";
import Ref from "../components/assets/Ref.astro";
import Logo from "../components/assets/Logo.astro";
import HomeSquare from "../components/assets/HomeSquare.astro";
import ConBtn from "../components/assets/ConBtn.astro";
import Work from "../components/Work.astro";
import About from "../components/About.astro";
import Services from "../components/Services.astro";
import Mark from "../components/Mark.astro";
---

<Layout title="Prinsium">
  <main class="main-content flex flex-col mt-3 gap-6">
    <Home />
    <Work />
    <Services />
    <Mark />
    <Footer />

    <div class="background-noise">
      <svg viewBox="0 0 400 2000" xmlns="http://www.w3.org/2000/svg">
        <filter id="noiseFilter">
          <feTurbulence
            type="fractalNoise"
            baseFrequency="3"
            numOctaves="2"
            stitchTiles="stitch"></feTurbulence>
        </filter>
        <rect width="100%" height="100vh" filter="url(#noiseFilter)"></rect>
      </svg>
    </div>
  </main>
</Layout>

<style>
  .background-noise {
    position: fixed; /* Fix the position so it scrolls with the page */
    top: 0;
    left: 0;
    width: 100vw; /* Full width of the viewport */
    height: 100vh; /* Full height of the viewport */
    z-index: -1; /* Ensure it's behind other content */
    pointer-events: none; /* So it doesn't interfere with other elements */
    opacity: 20%;
  }

  .main-content {
    min-height: 100%; /* Ensure your main content takes up full height as well */
    position: relative;
    z-index: 1;
  }
</style>
