---
import Navbar from "../components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Chakra+Petch:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Outfit:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
<div id="custom-cursor"></div>
    <Navbar />
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background-color: #121212;
    overflow-x: hidden; /* For Firefox */
    scrollbar-width: none;
  }

  body {
  cursor: none; /* Hide the default cursor */
  }

  #custom-cursor {
    position: absolute;
    width: 2vw; /* Set the size of the cursor */
    height: 2vw;
    background-color: red; /* Change color as needed */
    border-radius: 2px; /* Optional: make it slightly rounded */
    transform: translate(-50%, -50%); /* Center the cursor */
    pointer-events: none; /* Prevent blocking clicks */
    animation: rotate 3s linear infinite; /* Rotate infinitely */
  }

  /* Animation for rotating */
  @keyframes rotate {
    from {
      transform: translate(-50%, -50%) rotate(0deg);
    }
    to {
      transform: translate(-50%, -50%) rotate(360deg);
    }
  }

  ::-webkit-scrollbar {
    display: none; /* For Chrome, Safari, and Edge */
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  ul,
  li {
    font-family: "Chakra Petch", sans-serif;
    font-optical-sizing: auto;
    font-style: normal;
    color: #f4f4f4;
    line-height: 100%;
  }

  h1 {
    font-weight: 700;
    font-size: 7vw;
  }

  h2 {
    font-weight: 600;
    font-size: 6vw;
  }

  h3 {
    font-weight: 600;
    font-size: 5vw;
  }

  h4 {
    font-weight: 500;
    font-size: 4vw;
  }

  h5 {
    font-weight: 500;
    font-size: 3vw;
  }

  h6 {
    font-weight: 400;
    font-size: 2vw;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  @media screen and (max-width: 800px) {
    h1 {
      font-size: 4rem;
    }
    h2 {
      font-size: 3rem;
    }
    h3 {
      font-size: 2rem;
    }
    h4 {
      font-size: 1.6rem;
    }
    h5 {
      font-size: 1.2rem;
    }
    h6 {
      font-size: 0.8rem;
    }
  }

  @media screen and (max-width: 600px) {
    h1 {
      font-size: 3rem;
    }
    h2 {
      font-size: 2.5rem;
    }
    h3 {
      font-size: 2rem;
    }
    h4 {
      font-size: 1.5rem;
    }
    h5 {
      font-size: 1rem;
    }
    h6 {
      font-size: 0.5rem;
    }
  }
</style>


<script>
  const cursor = document.getElementById('custom-cursor');

  document.addEventListener('mousemove', (e) => {
    cursor.style.left = `${e.pageX}px`;
    cursor.style.top = `${e.pageY}px`;
  });

  document.addEventListener('mouseleave', () => {
    cursor.style.opacity = 1; // Hide the cursor when leaving the window
  });

</script>