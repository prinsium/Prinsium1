<style>
  /* Hover effect for cross animation */
  .navbar-open .line1 {
    transform: rotate(-45deg) translateY(10px);
  }

  .navbar-open .line2 {
    transform: rotate(45deg) translateY(-10px);
  }

  /* Modal sliding effect */
  #modal.active {
    display: flex;
    transform: translateY(0); /* Slide the modal into view */
  }

  #modal {
    display: none;
  }
</style>

<script>
  const navbar = document.getElementById('navbar');
  const modal = document.getElementById('modal');
  let isModalOpen = false;

  // Toggle modal visibility and cross animation
  navbar.addEventListener('click', () => {
    isModalOpen = !isModalOpen;

    // Toggle cross animation on navbar
    navbar.classList.toggle('navbar-open');

    // Toggle modal visibility
    if (isModalOpen) {
      modal.classList.add('active');
      modal.style.display = 'flex';  // Show the modal
    } else {
      modal.classList.remove('active');
      setTimeout(() => {
        modal.style.display = 'none'; // Hide the modal after the animation completes
      }, 500); // Match the duration of the sliding effect
    }
  });
</script>

